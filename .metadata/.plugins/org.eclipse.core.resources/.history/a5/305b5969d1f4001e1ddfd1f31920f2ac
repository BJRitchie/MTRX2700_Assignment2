void chase_led(){
	uint8_t *led_register = ((uint8_t*)&(GPIOE->ODR)) + 1;

	*led_register <<= 1;
	if (*led_register == 0) {
		*led_register = 1;
	}
}

int main(void)
{
	// enable components
	enable_clocks();
	initialise_board();
	enable_timer_interrupt();

	// set the interrupt handling function:
//	completion_function = &chase_led;

	setPeriod(&TIM2_init, 100000);
	TimerInitialise(&TIM2_init, &chase_led);

    /* Loop forever */
	for(;;);
}
